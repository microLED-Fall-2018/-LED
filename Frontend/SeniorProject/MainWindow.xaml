            <ListBox
                Name="patternList"
                Background="Transparent"
                Margin="0 4 0 0"
                Padding="2"
                Grid.Column="1"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Grid.RowSpan="3">
            </ListBox>
            <Button
                Name="CreateColorButton"
                Content="Create Pattern"
                Margin="0 4 0 0"
                Grid.Column="1"
                Grid.Row="3"
            />
            <Button
                Content="Delete Pattern"
                Margin="0 4 0 0"
                Grid.Column="2"
                Grid.Row="3"
            />
        </Grid>
    </Grid>
